<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <RootNamespace>Origam.Sms</RootNamespace>
        <Title>Origam.Sms</Title>
        <Authors>origam</Authors>
        <Description>The package contains an interface for sending SMS with Origam</Description>
        <PackageProjectUrl>https://community.origam.com/</PackageProjectUrl>
        <RepositoryUrl>https://github.com/origam/origam-sms</RepositoryUrl>
        <PackageTags>origam</PackageTags>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageLicenseExpression>GPL-3.0-only</PackageLicenseExpression>
        <PackageIcon>origam-icon-large.png</PackageIcon>
        <PackageIconUrl />
        <PackageVersion>2.0.1</PackageVersion>
        <TargetFramework>netstandard2.1</TargetFramework>
        <AssemblyName>Origam.Sms</AssemblyName>
        <PackageId>Origam.Sms</PackageId>
        <Product>Origam.Sms</Product>
        <AssemblyVersion>2.0.1</AssemblyVersion>
        <FileVersion>2.0.1</FileVersion>
    </PropertyGroup>

    <ItemGroup>
      <None Update="origam-icon-large.png">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </None>
    </ItemGroup>

    <ItemGroup>
      <None Remove="Resources\origam-icon-large.png" />
      <Resource Include="Resources\origam-icon-large.png">
        <Pack>True</Pack>
        <PackagePath>\</PackagePath>
      </Resource>
    </ItemGroup>

</Project>
